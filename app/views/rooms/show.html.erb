<div class='container-fluid'>
  <div class='row'>
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <table class="table">
       <div class="left-button">
      </div>
      <h4 class="rooms-title">ダイレクトメッセージ</h4>
      <% @entries.each do |e| %>
        <div class="customer-name">
        <strong>
          <%#= image_tag e.user.avatar, class:"user-image" %>
            <a class="rooms-customers-link" href="/customers/<%= e.customer.id %>">
              <%= e.customer.name %>さん
            </a>
        </strong>
        </div>
      <% end %>
      <hr>
      <div class="chats">
        <div class="chat">
          <% if @messages.present? %>
            <% @messages.each do |m| %>
            <% if current_customer.email != 'guest@example.com' %>
              <div class="chat-box">
                <!--<div class="chat-face">-->
                <!--  <%#= image_tag m.customer.avatar, class:"customer-image" %>-->
                <!--</div>-->
                <div>
                  <%= m.customer.name %>さん
                </div>
                <div class="chat-hukidashi"> <strong><%= m.body %></strong> <br>
                  <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="posts">
          <%= form_with model: @message, url: room_messages_path(params[:id]), method: :post do |f| %>
            <%= f.text_field :body, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
            <%= f.submit "投稿",class: 'form-submit'%>
          <% end %>
          <% end %>
        </div>
       </div> 
    </div>
  </div>
</div>    