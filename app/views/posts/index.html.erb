<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

<h1>投稿フォーム</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: '/posts', method: :post do |f| %>

  <h3>タイトル</h3>
  <%= f.text_field :title %>

  <h3>本文</h3>

  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
  <div class='row'>

    <i class="fas fa-user-cog"></i>
<% end %>
<table>
   <div class='col-md-8 offset-md-1'>

      <table class='table table-hover table-inverse'>
        <table class="table table-striped">
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
            <th>本文</th>
        </tr>
    </thead>
 <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.customer.name %></td>
                <td><%= post.title %></td>
                <td><%= post.body %></td>
                <td><%= link_to "編集", edit_post_path(post) %></td>
                <td><%= link_to "削除", post_path(post), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<h1>投稿一覧</h1>
<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>
<div class="post-list">
  <% @posts.each do |post| %>
    <%= post.title %>
  <% end %>
</div>
<% @posts.each do |post| %>
  <p>タイトル</p>
  <span>
    <%= link_to post.title, post_path(post.id) %>
  </span>
  <span>
    <%= post.customer.name %>
  </span>
<% if current_customer.following?(post.customer) %>
  <%= link_to "フォロー外す", customer_relationships_path(post.customer.id), method: :delete %>
<% else %>
  <%= link_to "フォローする", customer_relationships_path(post.customer.id), method: :post %>
<% end %>
<% end %>
 </table>