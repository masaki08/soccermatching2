<% if !customer_signed_in? %>
  <i class="fa fa-heart like-btn"></i>
  <%= post.favorites.length %>
<% elsif current_customer.favorited_by?(post.id) %>
  <%= link_to post_favorite_path(post, post.favorite), class: "favorite-link", method: :delete, remote: true do %>
    <i class="fa fa-heart unlike-btn"></i>
  <% end %>
  <%= post.favorites.length %>
<% else %>
  <%= link_to post_favorites_path(post), class: "favorite-link", method: :post, remote: true do %>
    <i class="fa fa-heart like-btn"></i>
  <% end %>
  <%= post.favorites.length %>
<% end %>