<div class='container-fluid'>
  <div class='row'>
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <table class="table">
        <thead>
            <tr>
                <th>投稿者名</th>
               
                <th>タイトル</th>
            
                <th>本文</th>
                <th></th>
            </tr>
        </thead>
     <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= post.customer&.name %></td>
                    <td><%= post.title %></td>
                    <td><%= post.body %></td>
                    <td>
                        <%= link_to "詳細", admin_post_path(post) %> | 
                        <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
                    </td> 
                </tr>
            <% end %>
        </tbody>
    </table>
  </div>
 </div>
</div> 
