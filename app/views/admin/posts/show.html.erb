<table>
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
            <th>本文</th>
            <th></th>
        </tr>
    </thead>
 <tbody>
        
            <tr>
                <td><%= @post.customer&.name %></td>
                <td><%= @post.title %></td>
                <td><%= @post.body %></td>
                <td>
                    
                    <%= link_to '削除', admin_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
                </td> 
            </tr>
       
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th>コメント</th>
            <th></th>
        </tr>
    </thead>
 <tbody>
        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.body %></td>
                <td>
                    <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' } %>
                </td> 
            </tr>
        <% end %>
    </tbody>
</table>