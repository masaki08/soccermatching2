<!DOCTYPE html>
<html>
  <head>
    <title>Soccermatching</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm mb-5" >
        <nav class="navbar expand-lg navbar-dark" style="background-color: #ffdab9;">

          <div class="container">
            <% if admin_signed_in? %>
              <%= link_to admin_root_path do %>
                <%= image_tag "no_image.jpg", size: "100x100" %>
              <% end %>
              <ul class="nav justify-content-end">
                <li class="nav-item btn"><%= link_to "会員一覧", root_path, class: 'nav-link text-dark' %></li>
                <li class="nav-item btn"><%= link_to "注文履歴一覧", admin_root_path, class: 'nav-link text-dark' %></li>
                <li class="nav-item btn"><%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark' %></li>
                <li class="nav-item btn"><%= link_to "ログアウト",  destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %></li>
              </ul>
            <% elsif customer_signed_in? %>
              <%= link_to root_path do %>
                <%= image_tag "no_image.jpg", size: "100x100" %>
              <% end %>
              <ul class="nav justify-content-end">
                <li class="nav-item btn"><%= link_to "マイページ",  edit_customer_registration_path, class: 'nav-link text-dark' %></li>
                <li class="nav-item btn"><%= link_to "投稿一覧",posts_path, class: 'nav-link text-dark' %></li>
  
                <li class="nav-item btn"><%= link_to "ログアウト",  destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %></li>
              </ul>
            <% else %>
              <%= link_to root_path do %>
                <%= image_tag "no_image.jpg", size: "100x100" %>
              <% end %>
              <ul class="nav justify-content-end">

                <li class="nav-item btn"><%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark' %></li>
                <li class="nav-item btn"><%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark' %></li>
              </ul>
            <% end %>
          </div>
        </nav>
      </header>

        <%= yield %>


              </div>
           </div>
         </div>
      </footer>

  </body>
</html>
